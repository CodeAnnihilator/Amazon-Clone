<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1>Shop smart, Save big!</h1>
      <p>Find your favourite product</p>
    <!-- <p><a class="btn btn-primary btn-lg" href="#" role="button">Signup &raquo;</a></p> -->
  </div>
</div>

<div class="container">
  <div class="row">
    <% for(var i = 0; i < products.length; i++) { %>
    <div class="col-md-4">
      <a href="/product/<%= products[i].id %>">
        <div class="thumbnail">
          <img src="<%= products[i].image %>" alt="">
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p><%= products[i].category.name %></p>
            <p><%= products[i].price %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 1; i < pages; i++) { %>
          <% if(i === 1) { %>
            <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
          <% } %>
        <% } %>
      </li>
    </ul>
  </div>
</div>
